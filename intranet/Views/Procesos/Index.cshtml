@model IEnumerable<intranet.Models.Procesos>

@{
    ViewData["Title"] = "Indice";
}

<h2>Indice</h2>

<p>
    <a asp-action="Create">Insertar Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Proceso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numeral)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fuente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Proceso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numeral)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fuente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Proceso">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Proceso">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Proceso">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
